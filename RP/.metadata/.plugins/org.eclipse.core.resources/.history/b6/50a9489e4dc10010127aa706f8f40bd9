package com.exam.controller;

import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.exam.dto.PolicyDTO;
import com.exam.entities.policytype;
import com.exam.service.PolicyService;

import lombok.AllArgsConstructor;

@RestController
@RequestMapping("/policys")
@AllArgsConstructor
public class PolicyController {
	private final PolicyService policyService;
	
	@PostMapping("/add")
	public ResponseEntity<?> addPolicy(@RequestBody PolicyDTO dto) {
		return ResponseEntity.ok(policyService.addpolicy(dto));
	}
	
	@GetMapping("/getall")
	public ResponseEntity<?> getall() {
		return ResponseEntity.ok(policyService.getall());
	}
	
	@GetMapping("/getbytype/{tpe}")
	public ResponseEntity<?> getbytype(@PathVariable policytype tpe) {
		return ResponseEntity.ok(policyService.getbytype(tpe));
	}
	
	@DeleteMapping("dele/{pid}")
	public ResponseEntity<?> delebyid(@PathVariable Long pid) {
		return ResponseEntity.ok(policyService.delebyid(pid));
	}
	
	
	@PutMapping("/udp/{cgamount}")
	public ResponseEntity<?> udpatesoe(@PathVariable float cgamount){
		return ResponseEntity.ok(policyService.updatesome(cgamount));
	}
	
	@GetMapping("/getbytype/{pname}")
	public ResponseEntity<?> getbypname(@PathVariable String pname) {
		return ResponseEntity.ok(policyService.getbypname(pname));
	}
}
