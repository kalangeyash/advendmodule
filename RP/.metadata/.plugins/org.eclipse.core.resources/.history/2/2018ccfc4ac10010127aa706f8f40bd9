package com.exam.controller;

import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.exam.dto.PolicyDTO;
import com.exam.entities.policytype;
import com.exam.service.PolicyService;

import lombok.AllArgsConstructor;

@RestController
@RequestMapping("/policys")
@AllArgsConstructor
public class PolicyController {
	private final PolicyService policyService;
	
	@PostMapping("/add")
	public ResponseEntity<?> addPolicy(@RequestBody PolicyDTO dto) {
		return ResponseEntity.ok(policyService.addpolicy(dto));
	}
	
	@GetMapping("/getall")
	public ResponseEntity<?> getall() {
		return ResponseEntity.ok(policyService.getall());
	}
	
	@GetMapping("/getbytype/{tpe}")
	public ResponseEntity<?> getbytype(policytype tpe) {
		return ResponseEntity.ok(policyService.getbytype());
	}
}
